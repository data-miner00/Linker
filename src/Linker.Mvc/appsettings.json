{
  "ConnectionStrings": {
    "Database": "[insert-connection-string-here]"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "SQLiteOption": {
    "ConnectionString": "[insert-connection-string-here]"
  },
  "FileUploadOption": {
    "PhysicalUploadOption": {
      "BasePath": "D:\\\\",
      "FolderName": "Uploads",
      "AllowedExtensions": [
        ".jpg",
        ".png",
        ".webp",
        ".jpeg"
      ]
    }
  },
  "CredentialOption": {
    "SaltLength": 16,
    "HashAlgorithmType": "Sha1"
  },
  "CookieOption": {
    "LoginPath": "/Auth/Login",
    "TimeoutInMinutes": 20
  }
}
