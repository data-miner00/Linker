@using Linker.Core.Models
@model Youtube
@{
    ViewData["Title"] = $"Edit {Model.Name}";
}


<h1 class="text-lg">Edit Youtube Link</h1>
<p class="text-gray-700">Update the details below to for the article link.</p>

<div class="my-12">
    <div>
        <form asp-action="Edit" class="max-w-screen-md">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Url" class="control-label"></label>
                <input asp-for="Url" class="form-control" />
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="Category" asp-items="Html.GetEnumSelectList<Category>()">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Youtuber" class="control-label"></label>
                <input asp-for="Youtuber" class="form-control" />
                <span asp-validation-for="Youtuber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Country" class="control-label"></label>
                <input asp-for="Country" class="form-control" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Language" class="control-label"></label>
                <select asp-for="Language" asp-items="Html.GetEnumSelectList<Language>()">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="Language" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <select asp-for="Rating" asp-items="Html.GetEnumSelectList<Rating>()">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tags" class="control-label"></label>
                <div id="tags-container" class="flex flex-wrap">
                    @foreach (var tag in Model.Tags)
                    {
                        <input class="form-control" value="@tag" disabled />
                    }
                    <button id="add-tag-btn" type="button">Add</button>
                </div>
                <span asp-validation-for="Tags" class="text-danger"></span>
            </div>
            <div class="hidden">
                <input asp-for="CreatedBy" value="@Model.CreatedBy" disabled />
            </div>
            <div class="my-3 flex">
                <button class="px-4 py-2 bg-black text-white rounded block">
                    Save changes
                </button>
            </div>
        </form>
    </div>
</div>

<div class="flex">
    <a asp-action="Index" class="px-4 py-2 bg-black text-white rounded block">Back to List</a>
</div>

