@using Linker.Core.V2.Models
@model ValueTuple<IEnumerable<Link>, string>

<p class="text-2xl font-semibold text-center mb-4">Add a link</p>

<form method="post" asp-action="AddLink" autocomplete="off" spellcheck="false">
    <input hidden name="playlistId" value="@Model.Item2" />
    <select name="linkId">
        @foreach (var link in Model.Item1)
        {
            <option value="@link.Id">@link.Name</option>
        }
    </select>
    <div class="flex gap-4 justify-end">
        <button type="submit" class="px-4 py-2 bg-black text-white rounded">Add</button>
        <button
            type="button"
            class="px-4 py-2 border border-solid border-black rounded"
            onclick="toggleLinkDialog()"
        >
            Cancel
        </button>
    </div>
</form>
