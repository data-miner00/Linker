@using Linker.Core.Models
@model ValueTuple<IEnumerable<Website>, string>

<p class="text-2xl font-semibold text-center mb-4">Add a website</p>
<div>
    <form method="post" asp-action="AddWebsite" autocomplete="off" spellcheck="false">
        <input hidden name="workspaceId" value="@Model.Item2" />
        <select name="websiteId">
            @foreach (var website in Model.Item1)
            {
                <option value="@website.Id">@website.Name</option>
            }
        </select>
        <div class="flex gap-4 justify-end">
            <button type="submit" class="px-4 py-2 bg-black text-white rounded">Add</button>
            <button
                type="button"
                class="px-4 py-2 border border-solid border-black rounded"
                onclick="toggleWebsiteDialog()"
            >
                Cancel
            </button>
        </div>
    </form>
</div>

