@using Linker.Core.Models
@model ValueTuple<IEnumerable<Youtube>, string>

<p class="text-2xl font-semibold text-center mb-4">Add a youtube</p>
<div>
    <form method="post" asp-action="AddYoutube" autocomplete="off" spellcheck="false">
        <input hidden name="workspaceId" value="@Model.Item2" />
        <select name="youtubeId">
            @foreach (var youtube in Model.Item1)
            {
                <option value="@youtube.Id">@youtube.Name</option>
            }
        </select>
        <div class="flex gap-4 justify-end">
            <button type="submit" class="px-4 py-2 bg-black text-white rounded">Add</button>
            <button
                type="button"
                class="px-4 py-2 border border-solid border-black rounded"
                onclick="toggleYoutubeDialog()"
            >
                Cancel
            </button>
        </div>
    </form>
</div>

