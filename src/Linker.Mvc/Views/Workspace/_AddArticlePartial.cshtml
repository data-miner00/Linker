@using Linker.Core.Models
@model ValueTuple<IEnumerable<Article>, string>

<p class="text-2xl font-semibold text-center mb-4">Add an article</p>

<form method="post" asp-action="AddArticle" autocomplete="off" spellcheck="false">
    <input hidden name="workspaceId" value="@Model.Item2" />
    <select name="articleId">
        @foreach (var article in Model.Item1)
        {
            <option value="@article.Id">@article.Title</option>
        }
    </select>
    <div class="flex gap-4 justify-end">
        <button type="submit" class="px-4 py-2 bg-black text-white rounded">Add</button>
        <button
            type="button"
            class="px-4 py-2 border border-solid border-black rounded"
            onclick="toggleArticleDialog()"
        >
            Cancel
        </button>
    </div>
</form>
